<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="">
        <item name="android:textAppearance">@style/Action</item>
        <item name="android:textColor">@color/text_action</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle.Regular">
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="ButtonStyle.Highlighted">
        <item name="android:background">@drawable/selector_button_highlighted</item>
    </style>
</resources>