<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Header">
        <item name="fontWeight">700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subheader">
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Title">
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subtitle">
        <item name="fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Description">
        <item name="fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Action">
        <item name="fontWeight">400</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingMultiplier">1.172</item>
        <item name="android:textColor">@color/text_action</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>